{
  "name": "pennyblack/php-sdk",
  "description": "Penny Black PHP SDK",
  "license": "MIT",
  "authors": [
    {
      "name": "Penny Black",
      "email": "engineers@pennyblack.io"
    }
  ],
  "require": {
    "php": ">=7.4.0" ,
    "ext-curl": "*",
    "ext-json": "*",
    "psr/http-client": "^1.0",
    "psr/http-client-implementation": "*",
    "psr/http-factory": "^1.0",
    "psr/http-factory-implementation": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "8.5.38",
    "phpstan/phpstan": "2.1.28",
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.13",
    "guzzlehttp/guzzle": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "PennyBlack\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "prepend-autoloader": false
  },
  "scripts": {
    "unit-test": "./vendor/bin/phpunit tests/",
    "quality-check": [
      "@phpcs",
      "@phpstan",
      "@phpmd"
    ],
    "phpcs": "./vendor/bin/phpcs",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon src",
    "phpmd": "./vendor/bin/phpmd ./src text ./phpmd.xml"
  }
}
